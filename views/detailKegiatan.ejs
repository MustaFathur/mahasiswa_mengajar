  <!-- Blog Article -->
  <div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto">
    <div class="py-8 lg:pe-8">
      <div class="bg-white rounded-lg shadow-md p-6 kegiatan-item transition-transform hover:scale-105">
        <div class="flex-shrink-0 mr-6">
          <img style="width: 90% ;height:600px;margin-left: 4%;margin-right: 4%;" src="/uploads/<%=kegiatan.gambar %>"
            alt="<%= kegiatan.judul %>" class="h-80 object-cover rounded-md mb-4">
        </div>

        <div class="flex items-start" style="margin-left: 3%;margin-right: 3%;">
          <div style="padding-left: 20px;width: 66%;">
            <h1 class="text-2xl font-bold mb-4">
              <%= kegiatan.judul %>
            </h1>
            <p class="text-gray-700 mb-4" style="padding-right: 30px;">
              <%= kegiatan.deskripsi %>
            </p>

          </div>
          <% if(!pendaftaran) { %>
            <div style=" background-color: #ED6F58;width: 30%;border-radius: 20px; color: white;">
              <div style="margin-left: auto;margin-right: auto;padding: 20px 0px 20px 0px;width: 80%;">
                <p class="text mb-2"><strong>Kuota Relawan:</strong>
                  <%= kegiatan.kuotaRelawan %>
                </p>
                <p class="text mb-2"><strong>Waktu Kegiatan:</strong>
                  <%= moment(kegiatan.mulai).format('DD') %>- <%= moment(kegiatan.selesai).format('DD MMMM YYYY') %>
                </p>
                <p class="text mb-2"><strong>Sekolah :</strong>
                  <%= kegiatan.kuotaRelawan %>
                </p>
                <a href="/kegiatan/<%= kegiatan.idKegiatan %>/lamar"
                  class="px-6 py-1.5 inline-flex justify-center items-center gap-2 rounded-lg border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm"
                  style="background-color: white; color: #ED6F58;height: 50px;width: 150px;">
                  Lamar Kegiatan
                </a>
              </div>
              <% }else{ %>
                
                <div style=" background-color: #ED6F58;width: 30%;border-radius: 20px; color: white;">
                  <div style="margin-left: auto;margin-right: auto;padding: 20px 0px 20px 0px;width: 80%;">
                    <div style=" padding: 4px;background-color: white;color: #ED6F58; border-radius: 10px;"> Kamu sudah terdaftar di lowongan ini </div>

                    <p class="text mb-2"><strong>Kuota Relawan:</strong>
                      <%= kegiatan.kuotaRelawan %>
                    </p>
                    <p class="text mb-2"><strong>Waktu Kegiatan:</strong>
                      <%= moment(kegiatan.mulai).format('DD') %>- <%= moment(kegiatan.selesai).format('DD MMMM YYYY') %>
                    </p>
                    <p class="text mb-2"><strong>Sekolah :</strong>
                      <%= pendaftaran.status %>

                    </p>
                    <a href="/kegiatan/<%= kegiatan.idKegiatan %>/lamar"
                      class="px-6 py-1.5 inline-flex justify-center items-center gap-2 rounded-lg border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm"
                      style="background-color: rgb(255, 255, 255); color: #ED6F58 ;height: 50px;width: 150px;">
                      <%= pendaftaran.status %>
                    </a>
                    
                  </div>
                  
                  <% } %>
                </div>

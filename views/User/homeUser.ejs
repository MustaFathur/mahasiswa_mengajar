<%- include('headUser.ejs') %>


<!-- Hero -->
<div style="margin-top: 80px ; margin-bottom: 50px;" class="relative overflow-hidden before:absolute before:top-0 before:start-1/2 before:bg-[url('https://preline.co/assets/svg/examples/squared-bg-element.svg')] before:bg-no-repeat before:bg-top before:size-full before:-z-[1] before:transform before:-translate-x-1/2">
    <div class="max-w-[85rem] mx-auto px-4 sm:px-6 lg:px-8 pt-24 pb-10">


    <!-- Title -->
    <div class="mt-5 max-w-xl text-center mx-auto">
        <h1 class="block font-bold text-gray-800 text-4xl md:text-5xl lg:text-6xl">
        Relawan Untuk Kita, Kita Untuk Relawan
        </h1>
    </div>
    <!-- End Title -->

    <div class="mt-5 max-w-3xl text-center mx-auto">
        <p class="text-lg text-gray-600">Mari berkontribusi dalam membangun masa depan cerah bagi generasi penerus bangsa.</p>
    </div>

    <!-- Buttons -->
    <div class="mt-8 gap-3 flex justify-center">
        <a class="inline-flex justify-center items-center gap-x-3 text-center bg-gradient-to-tl from-blue-600 to-violet-600 hover:from-violet-600 hover:to-blue-600 border border-transparent text-white text-sm font-medium rounded-full py-3 px-4" href="#">
        Ayo Mulai
        </a>
    </div>
    <!-- End Buttons -->
    </div>
</div>
<!-- End Hero -->

<!-- Blog Article -->
<div class="max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto">
    <div class="grid lg:grid-cols-3 gap-y-8 lg:gap-y-0 lg:gap-x-6">
      <!-- Content -->
      <div class="lg:col-span-2">
        <div class="py-8 lg:pe-8">
          <% kegiatanList.forEach(kegiatan=> { %>
            <div class="bg-white rounded-lg shadow-md p-6 kegiatan-item transition-transform hover:scale-105"
              style="background-color: rgb(255, 255, 255); padding-left: 50px; padding-right: 50px; margin-top: 20px;">
              <h2 class="text-2xl font-semibold mb-4">
                <%= kegiatan.judul %>
              </h2>
              <div class="flex items-start">
                <div class="flex-shrink-0 mr-6">
                  <img style="width: 200px;" src="uploads/<%=kegiatan.gambar %>" alt="<%= kegiatan.judul %>"
                    class="h-48 object-cover rounded-md mb-4">
                </div>
                <div style=" padding-left: 20px;">
                  <p class="text-gray-700 mb-4">
                    <%= kegiatan.deskripsi %>                  </p>

                </div>
              </div>
              <div class="flex justify-between">
                <p class="text-gray-500 mb-2"><strong>Kuota:</strong>
                  <%= kegiatan.kuotaRelawan %>
                </p>
                <td class="size-px whitespace-nowrap">
                  <a style="width:120px; height: 40px;background-color: #ED6F58; color: white;" href="/kegiatan/<%= kegiatan.idKegiatan %>"
                    class="px-6 py-1.5 inline-flex justify-center items-center gap-2 rounded-lg border font-medium bg-white text-gray-700 shadow-sm align-middle hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-white focus:ring-blue-600 transition-all text-sm">
                    Detail
                  </a>
                </td>
              </div>
              <p class="text-gray-500 mb-2"><strong>Waktu Kegiatan:</strong>
                <%= moment(kegiatan.mulai).format('DD') %>- <%= moment(kegiatan.selesai).format('DD MMMM YYYY') %>
              
              </p>
            </div>

            <% }) %>
        </div>
      </div>
      <!-- End Content -->
  
      <!-- Sidebar -->
      <div class="lg:col-span-1 lg:w-full lg:h-full lg:bg-gradient-to-r lg:from-gray-50 lg:via-transparent lg:to-transparent">
        <div class="sticky top-0 start-0 py-8 lg:ps-8">
          <!-- Avatar Media -->
          <div class="group flex items-center gap-x-3 border-b border-gray-200 pb-8 mb-8">

  
            <a class="group grow block" href="">
              <h5 class="group-hover:text-gray-600 text-sm font-semibold text-gray-800">
                Tentang Indonesia Mengajar Tentang Mahasiswa Mengajar
              </h5>
            </a>
  
            <div class="grow">
              <div class="flex justify-end">
                <button type="button" class="py-1.5 px-2.5 inline-flex items-center gap-x-2 text-xs font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none">                  Detail
                </button>
              </div>
            </div>
          </div>
          <!-- End Avatar Media -->
  
          <div class="space-y-6">
            <!-- Media -->
            <a class="group flex items-center gap-x-6" href="#">
              <div class="grow">
                <span class="text-sm font-bold text-gray-800 group-hover:text-blue-600">
                  Visi Dan Misi Kami
                </span>
              </div>
  
              <div class="flex-shrink-0 relative rounded-lg overflow-hidden size-20">
                <img class="size-full absolute top-0 start-0 object-cover rounded-lg" src="https://images.unsplash.com/photo-1567016526105-22da7c13161a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80" alt="Image Description">
              </div>
            </a>
            <!-- End Media -->
  
            <!-- Media -->
            <a class="group flex items-center gap-x-6" href="#">
              <div class="grow">
                <span class="text-sm font-bold text-gray-800 group-hover:text-blue-600">
                  Temukan Lebih Banyak Relawan dan Kegiatan
                </span>
              </div>
  
              <div class="flex-shrink-0 relative rounded-lg overflow-hidden size-20">
                <img class="size-full absolute top-0 start-0 object-cover rounded-lg" src="https://images.unsplash.com/photo-1542125387-c71274d94f0a?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80" alt="Image Description">
              </div>
            </a>
            <!-- End Media -->
  
            <!-- Media -->
            <a class="group flex items-center gap-x-6" href="#">
              <div class="grow">
                <span class="text-sm font-bold text-gray-800 group-hover:text-blue-600">
                  Riset Dan Publikasi
                </span>
              </div>
  
              <div class="flex-shrink-0 relative rounded-lg overflow-hidden size-20">
                <img class="size-full absolute top-0 start-0 object-cover rounded-lg" src="https://images.unsplash.com/photo-1586232702178-f044c5f4d4b7?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1480&q=80" alt="Image Description">
              </div>
            </a>
            <!-- End Media -->
          </div>
        </div>
      </div>
      <!-- End Sidebar -->
    </div>
  </div>

  <!-- End Blog Article -->
        <script src="/preline.js"></script>

    </body>
</html>

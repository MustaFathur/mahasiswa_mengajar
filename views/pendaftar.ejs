<!DOCTYPE html>
<html lang="id" class="h-full">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/stylesheets/output.css" />
  <script src="/preline.js"></script>
</head>
<body class="bg-gray-50 flex flex-col h-full">
  <main class="w-full max-w-[85rem] py-10 px-4 sm:px-6 lg:px-8 mx-auto">
    <div class="mb-5 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-gray-800"><%= title %></h1>
    </div>

    <div class="flex flex-col">
      <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 min-w-full inline-block align-middle">
          <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">NIM</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Universitas</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">CV</th>
                  <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                  <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">Aksi</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                <% regis.forEach(function(pendaftar) { %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"><%= pendaftar.umum.nama %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= pendaftar.umum.nim %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= pendaftar.umum.universitas %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-blue-500">
                    <a href="/uploads/<%= pendaftar.umum.cv %>" target="_blank">Lihat CV</a>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= pendaftar.status %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                    <form action="/ajukan-kegiatan/pendaftar/<%= pendaftar.idPendaftaran %>/setujui" method="POST" class="inline">
                      <button type="submit" class="text-green-500 hover:text-green-700">Setujui</button>
                    </form>
                    <form action="/ajukan-kegiatan/pendaftar/<%= pendaftar.idPendaftaran %>/tolak" method="POST" class="inline ml-2">
                      <button type="submit" class="text-red-500 hover:text-red-700">Tolak</button>
                    </form>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
